{
	"author": "rootkowsky",
	"name": "spotify-songs-to-playlist",
	"description": "Generates playlist from songs list",
	"version": "0.0.1",
	"scripts": {
		"run-dev": "npm run backend-dev & npm run frontend-dev",
		"backend-dev": "./node_modules/nodemon/bin/nodemon.js -e ts --exec \"npm run backend-build && npm run backend-serve\"",
		"backend-build": "tsc --project \"./config/backend/tsconfig.json\" || exit 1",
		"backend-serve": "node --inspect dist/index.js",
		"frontend-dev": "webpack --config config/frontend/webpack.dev.config.js",
		"frontend-prod": "webpack --config config/frontend/webpack.prod.config.js"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"cookie": "^0.3.1",
		"cookie-parser": "1.3.2",
		"express": "~4.16.0",
		"normalize-scss": "^7.0.1",
		"querystring": "~0.2.0",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"request": "~2.83.0",
		"source-map-loader": "^0.2.4"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/plugin-transform-runtime": "^7.1.0",
		"@babel/preset-env": "^7.1.6",
		"@babel/preset-react": "^7.0.0",
		"@babel/runtime": "^7.2.0",
		"@types/node": "^10.3.2",
		"@types/react": "^16.7.20",
		"@types/react-dom": "^16.0.11",
		"awesome-typescript-loader": "^5.2.1",
		"babel-loader": "^8.0.4",
		"css-loader": "^2.1.0",
		"mini-css-extract-plugin": "^0.5.0",
		"node-sass": "^4.11.0",
		"node-sass-glob-importer": "^5.3.0",
		"nodemon": "^1.18.9",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"typescript": "^3.2.4",
		"webpack": "^4.26.1",
		"webpack-cli": "^3.2.1",
		"webpack-merge": "^4.2.1"
	}
}
